<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ashleyridout.yoursforaday">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver android:name=".RegistrationReceiver">
            <intent-filter>
                <action android:name="com.YFAD.CUSTOM_INTENT" />
            </intent-filter>
        </receiver>

        <activity android:name=".RegisterActivity" />
        <activity android:name=".WelcomeUserActivity" />
        <activity android:name=".AccountActivity" />
        <activity android:name=".KeeperListActivity" />
        <activity android:name=".CheckoutActivity" />
        <activity android:name=".KeeperCurrentActivity" />
        <activity android:name=".SeekerFindActivity" />
        <activity android:name=".ActionBarListActivity" />
        <activity android:name=".SeekerPastRentalsActivity"></activity>
    </application>

</manifest>
